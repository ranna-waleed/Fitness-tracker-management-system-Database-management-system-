<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <!-- Include any additional stylesheets or scripts here -->
</head>
<body>
    <h1>Login</h1>
    
    <form method="post" asp-page-handler="OnPost">
        <div>
            <label for="Email">Email:</label>
            <input type="email" id="Email" name="Email" asp-for="Email" required />
            <span asp-validation-for="Email"></span>
        </div>

        <div>
            <label for="Password">Password:</label>
            <input type="password" id="Password" name="Password" asp-for="Password" required />
            <span asp-validation-for="Password"></span>
        </div>

        <div>
            <button type="submit">Login</button>
        </div>
    </form>

    <!-- Display validation errors -->
    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Include any additional content or scripts here -->
</body>
</html>

