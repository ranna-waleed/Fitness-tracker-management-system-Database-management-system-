@page
@model trial.Pages.EditModel
@{
}
<br />
<h1>Edit User</h1>
@if (Model.errorMessage.Length > 0)
{
    <div class="alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}
<form method="POST">
    <input type="hidden" name="TrainerID" value="@Model.nutritionInfo.TrainerID">
  
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nutrition_planID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Nutrition_planID" value="@Model.nutritionInfo.Nutrition_planID" />
        </div>
    </div>
    <br>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nutrition_planDuration</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Nutrition_planDuration" value="@Model.nutritionInfo.Nutrition_planDuration" />
        </div>
    </div>
    <br>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">MealName</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="MealName" value="@Model.nutritionInfo.MealName" />
        </div>
    </div>
    <br>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">MealID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="MealID" value="@Model.nutritionInfo.MealID" />
        </div>
    </div>
    <br>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Number_of_meals</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Number_of_meals" value="@Model.nutritionInfo.Number_of_meals" />
        </div>
    </div>
    <br>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Times_per_week</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Times_per_week" value="@Model.nutritionInfo.Times_per_week" />
        </div>
    </div>
    <br>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Calories</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Calories" value="@Model.nutritionInfo.Calories" />
        </div>
    </div>
    <br><br>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Protien</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="Protien" value="@Model.nutritionInfo.Protien" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Trainer" role="button">Cancel</a>
        </div>
    </div>
</form>
