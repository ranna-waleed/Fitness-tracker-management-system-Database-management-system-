@page
@model trial.Pages.EditGoalModel
@{
}

<br />
<h1>Edit  Goals</h1>
@if (Model.errorMessage.Length > 0)
{
    <div class="alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>

}
<form method="POST">
    <input type="hidden" name="UserID" value="@Model.goalInfo.UserID">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">TrainerID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="TrainerID" value="@Model.goalInfo.TrainerID" />
        </div>
    </div>
    <br>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">GoalID</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="GoalID" value="@Model.goalInfo.GoalID" />
        </div>
    </div>
    <br>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">GoalType</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="GoalType" value="@Model.goalInfo.GoalType" />
        </div>
    </div>
    <br>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">TargetValue</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="TargetValue" value="@Model.goalInfo.TargetValue" />
        </div>
    </div>
    

    @if (Model.successMessage.Length > 0)
    {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.successMessage</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }
    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <div class="col-sm-3 d-grid">
            <a class="btn btn-outline-primary" href="/Goal" role="button">Cancel</a>
        </div>
    </div>
</form>

